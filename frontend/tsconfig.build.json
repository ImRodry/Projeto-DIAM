{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2024",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rewriteRelativeImportExtensions": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src"]
}
